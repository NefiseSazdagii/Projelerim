@model IEnumerable<E_Ticaret.Models.Urunler>

@{
    ViewBag.Title = "Index";
}

<h2>Ürünler</h2>

<p>
    @Html.ActionLink("Yeni Oluştur", "Create")
</p>
<table class="table">
    <tr>
        <th>
        Ürün Adı
         @*@Html.DisplayNameFor(model => model.UrunAdi) veritabanından gelen isim*@   
        </th>
        <th>
         Açıklama
        </th>
        <th>
         Fiyat
        </th>
        <th>
        Kategori
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UrunAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UrunAciklamasi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UrunFiyati)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Kategori.KategoriAdi)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.UrunID }) |
            @Html.ActionLink("Ayrıntılar", "Details", new { id=item.UrunID }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.UrunID })
        </td>
    </tr>
}

</table>
