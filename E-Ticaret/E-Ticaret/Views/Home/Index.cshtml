@using E_Ticaret.Models;
@{
    ViewBag.Title = "Ana Sayfa";
}

<div class="jumbotron">
    <h2>MVC Eticaret Projesi</h2>
</div>

<div class="row">
    <div class="col-md-3">
        <h4>Kategoriler</h4>
      
        <ul>

            @foreach (var item in (List<Kategori>)ViewBag.KategoriListesi)

            {
                  @*Bu kısımda kategori listedekileri linke çevirmek istiyorum.*@
                <li>@Html.ActionLink(item.KategoriAdi,"Kategori",new {id=item.KategoriID })</li>
            }
          
        </ul>
       </div>
        <div class="col-md-9">
            <div class="row">
                @foreach (var item in (List<Urunler>)ViewBag.SonUrunler)
                {
                    <div class="col-md-4" style="border:1px solid #808080">
                        <h5>@item.UrunAdi</h5>


                        <img src="/images/@(item.UrunID).jpg" style="max-width:100%; height:250px;" />

                        <p>
                            <a class="btn btn-default" href="@Url.Action("UrunDetay","Home",new { id = item.UrunID })">Ürün Detay &raquo;</a>
                            <span style="color:black; float:right; font-weight:bold; font-size:16px;">
                                @item.UrunFiyati TL
                        </span>
                    </p>

                    </div>
                }




            </div>


        </div>
</div>
