@using E_Ticaret.Models;
@{
    ViewBag.Title = "UrunDetay";
}

<h2>@Model.UrunAdi</h2>

<div class="row">
    <div class="col-md-6">
        <h4>Kategoriler</h4>

        <ul>

            @foreach (var item in (List<Kategori>)ViewBag.KategoriListesi)

            {
                @*Bu kısımda kategori listedekileri linke çevirmek istiyorum.*@
                <li>@Html.ActionLink(item.KategoriAdi, "Kategori", new { id = item.KategoriID })</li>
            }

        </ul>
       
    </div>
    <div class="col-md-6">
        <h2>Ürün Adı</h2><br />
        <h3>@Model.UrunAdi</h3>
        <img src="/images/@(Model.UrunID).jpg" style="max-width:100%; height:250px;" />
        Ürün Fiyatı:<span style="color:red; font:bold; font-size:15px;">@Model.UrunFiyati</span>
        <form action="/Sepets/SepeteEkle">
            <input type="submit" id="gonder" value="Sepete Ekle"/>

        </form>

    </div>
    </div>

